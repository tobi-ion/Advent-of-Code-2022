#find the highest sum in a list with vertically arranged numbers; after each blank cell, a new sum starts


import openpyxl

# Load the Excel sheet
workbook = openpyxl.load_workbook('AdventOfCode1.xlsx')
worksheet = workbook.active

# Iterate over the cells and compute the sum between blank spaces

sum = 0
maxi = 0
for row in worksheet.iter_rows():
    for cell in row:
        if cell.value is not None:
            try:
                num = float(cell.value)
                sum += num
            except ValueError:
                pass
        else:
            print(f"Sum: {sum}")
            sum = 0

        maxi = max(sum, maxi)

# Print the final sum
print(f"Sum: {sum}")
#Print the largest sum
print(f"Largest sum: {maxi}")
